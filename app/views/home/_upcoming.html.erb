<div id="dashboard_upcoming" class="row">
  <div class="col-md-12">

    <!-- Heading -->
    <div class="row">
      <div class="col-md-12">
        <h3>
          <%= glyph(:task) %>
          Upcoming
        </h3>
      </div>
    </div>
    <!-- End Heading -->

    <!-- Listing -->
    <div class="row <%= 'tasks-section tasks-upcoming' if scheduled_actions.any? %>">
      <div class="col-md-12">
        <% if scheduled_actions.count > 20 %>
          <div class="tasks-header">
            <%= link_to "View All", scheduled_actions_path(team: true), class: "btn btn-sm btn-primary float-right" %>
          </div>
        <% end %>
        
        <% if scheduled_actions.any? %>
          <div class="task-cards">
            <%= render collection: scheduled_actions.limit(20), partial: 'scheduled_action_card', locals: { task_type: 'upcoming' } %>
          </div>
        <% else %>
          <div class="tasks-empty-state">
            <div class="empty-icon">
              <%= glyph(:calendar) %>
            </div>
            <div class="empty-title">No upcoming tasks</div>
            <div class="empty-description">You're all clear for the future</div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- End Listing -->

  </div>
</div>
