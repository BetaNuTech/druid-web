<div id="ActiveLeads">
  <h1>Active Leads</h1>
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="appointments-tab" data-bs-toggle="tab" data-bs-target="#appointments" type="button" role="tab" aria-controls="appointments" aria-selected="true">
        Appointments
        (<%= service.upcoming_appointments.count %>)
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="my-leads-tab" data-bs-toggle="tab" data-bs-target="#my-leads" type="button" role="tab" aria-controls="my-leads" aria-selected="false">
        My Leads
        (<%= service.my_leads.count %>)
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="all-leads-tab" data-bs-toggle="tab" data-bs-target="#all-leads" type="button" role="tab" aria-controls="all-leads" aria-selected="false">
        All Leads
        (<%= service.all_leads.count %>)
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="stale-leads-tab" data-bs-toggle="tab" data-bs-target="#stale-leads" type="button" role="tab" aria-controls="stale-leads" aria-selected="false">
        Stale
        (<%= service.stale_leads.count %>)
      </button>
    </li>
  </ul>
  <div class="tab-content">
    <%= render partial: 'active_leads_appointments', locals: { appointments: service.upcoming_appointments } %>
    <%= render partial: 'active_leads_my_leads', locals: { leads: service.my_leads } %>
    <%= render partial: 'active_leads_all_leads', locals: { leads: service.all_leads } %>
    <%= render partial: 'active_leads_stale_leads', locals: { leads: service.stale_leads } %>
  </div>
</div>

<div class="row" id="DashboardLeadLinks">
  <div class="col-md-4 hide-on-mobile">
    <div>
      <%= link_to(search_leads_path(lead_search: {states: ['waitlist']}), class: 'icon-link') do %>
        <%= image_tag('icon-waitlist.png') %>
        Lead Waitlist
      <% end %>
    </div>
  </div>
  <div class="col-md-4 center">
    <div>
      <%= link_to(search_leads_path, class: 'icon-link' + nav_item_class(:leads, :search)) do %>
        <%= inline_svg_tag('magnifying-glass.svg') %>
        Search Leads
      <% end %>
    </div>
  </div>
  <div class="col-md-4" id="dashboard-link-new-lead">
    <div>
      <%= link_to(custom_new_leads_path(entry: 'walkin'), class: 'icon-link right' + nav_item_class(:leads, :new)) do %>
        <%= inline_svg_tag('plus.svg') %>
        Create A New Lead
      <% end %>
    </div>
  </div>
</div>
