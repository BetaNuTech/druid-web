<section class="section">
<div class="row">
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-6">
        <h1>Reason</h1>
        <h4>Lead Action and other Reasons</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Name:</strong>
          <%= @reason.name %>
        </p>
       </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Description:</strong>
          <%= @reason.description %>
        </p>
       </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Active:</strong>
          <%= @reason.active %>
        </p>
       </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= link_to 'Edit', edit_reason_path(@reason) %> |
        <%= link_to 'Back', reasons_path %>
      </div>
    </div>

  </div>
</div>
</section>