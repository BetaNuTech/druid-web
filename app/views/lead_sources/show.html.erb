<div class="row">
  <div class="col-md-6">
    <h1>Lead Source: <%= @lead_source.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <p>
      <strong>Name:</strong><br/>
      <%= @lead_source.name %>
    </p>
    <p>
      <strong>Slug:</strong><br/>
      <%= @lead_source.slug %>
    </p>
   </div>
</div>

<div class="row">
  <div class="col-md-2">
    <p>
      <strong>Active?</strong>
      <%= @lead_source.active %>
    </p>
   </div>
  <div class="col-md-2">
    <p>
      <strong>Incoming?</strong>
      <%= @lead_source.incoming %>
    </p>
   </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p>
      <strong>API Token</strong>
      <%= @lead_source.api_token %>
      <%= link_to('Reset', reset_token_lead_source_path(@lead_source), class: "btn btn--info btn--xs", method: :post, data: {confirm: 'Are you sure you want to reset this API token? This action cannot be undone and the old token cannot be recovered.'} )%>
    </p>
   </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>
      <strong>API Docs:</strong>
      <%= link_to(api_v1_docs_path(token: @lead_source.api_token), api_v1_docs_path(token: @lead_source.api_token), target: :blank) %>
    </p>
   </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h4>Properties (<%= @lead_source.properties.count %>)</h4>
    <ul>
      <% @lead_source.listings_by_property_name.each do |listing| %>
        <li>
          <%= link_to(listing.property.name, property_path(listing.property)) %> [ID: <%= listing.code %>]
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit', edit_lead_source_path(@lead_source) %> |
    <%= link_to 'Back', lead_sources_path %>
  </div>
</div>
