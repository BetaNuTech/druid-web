<section class="section">
<div class="row">
  <div class="col-md-6">
    <h1>Lead Sources</h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'Create New Lead Source', new_lead_source_path, class: "btn btn--small btn--primary" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table" data-clickable-rows="true">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Slug</th>
          <th>Incoming</th>
          <th>Active</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @lead_sources.each do |lead_source| %>
          <tr>
            <td></td>
            <td><%= lead_source.name %></td>
            <td><%= lead_source.slug %></td>
            <td><%= lead_source.incoming %></td>
            <td><%= lead_source.active %></td>
            <td class="actions">
              <%= model_link_with_tooltip(lead_source, :show) %>
              <%= model_link_with_tooltip(lead_source, :edit) %>
              <%= model_link_with_tooltip(lead_source, :destroy) %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
    <br>

  </div>
</div>
</section>