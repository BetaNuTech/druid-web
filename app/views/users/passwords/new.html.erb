<div class="row">
  <div class="col-md-12">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row">
        <div class="col-md-12">
          <%= devise_error_messages! %>
        </div>

        <div class="row" >
          <div class="col-md-6 form__group">
            <%= f.label :email, class: 'form__label' %>
            <%= f.email_field :email, { class: "form__control", autofocus: true } %>
          </div>
        </div>

      <div class="row">
        <div class="col-md-6 form__group">
          <button type="submit" class="btn btn--primary">Send Password Reset Instructions</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render "devise/shared/links" %>
  </div>
</div>
