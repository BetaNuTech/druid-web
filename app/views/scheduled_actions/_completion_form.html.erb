<%= form_for(@scheduled_action, url: complete_scheduled_action_path(@scheduled_action), method: :post ) do |form| %>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4 form__group">
            <%= form.label :completion_action, "Mark Task as Completed", class: 'form__label' %>
            <%= form.select(:completion_action, select_scheduled_action_action(@scheduled_action), {prompt: '-Please Select-'}, class: "form__control") %>
          </div>
          <div class="col-md-2 form__group retry_delay_selector" id="retry_delay_selector_value">
            <%= form.label :completion_retry_delay_value, "Next Due After", class: 'form__label' %>
            <%= form.select(:completion_retry_delay_value, scheduled_action_completion_retry_delay_select_value(@scheduled_action), {}, class: 'form__control') %>
          </div>
          <div class="col-md-2 form__group retry_delay_selector" id="retry_delay_selector_unit">
            <label for="scheduled_action_completion_retry_delay_unit" class="form__label">&nbsp;</label>
            <%= form.select(:completion_retry_delay_unit, scheduled_action_completion_retry_delay_select_unit(@scheduled_action), {}, class: 'form__control') %>
          </div>
        </div>
        <% if @scheduled_action.user.present? && ScheduledActionPolicy.new(current_user, @scheduled_action).impersonate?  %>
          <div class="row">
            <div class="col-md-12 form__group">
              <div class="form__check">
                <%= form.check_box :impersonate, class: "form__check-input"%>
                <%= form.label :impersonate, "Complete Task as #{@scheduled_action.user.name}", class: "form__check-label" %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-12 form__group">
            <%= form.label :completion_message, "Memo", class: 'form__label' %>
            <%= form.text_area :completion_message, class: "form__control", rows: 5 %>
          </div>
        </div>
      </div>
    </div>

    <div class="form__group">
      <button type="submit" class="btn btn--primary">Save</button>
    </div>

<% end %>
