<div class="row">
  <div class="col-md-6">
    <h1>Roles</h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'Create New Role', new_role_path, class: "btn btn--small btn--primary" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><strong><%= role.name %></strong></td>
            <td><%= role.slug %></td>
            <td><%= role.description %></td>
            <td>
              <%= model_link_with_tooltip(role, :show) %>&nbsp;
              <%= model_link_with_tooltip(role, :edit) %>&nbsp;
              <%= model_link_with_tooltip(role, :destroy) %>&nbsp;
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
