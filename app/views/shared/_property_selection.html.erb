<% if policy(Property).select_current? %>
  <%= form_tag(select_current_properties_path, method: :post, remote: false, id: 'propertyselection--form', class: 'form-inline') do %>
  <div id="propertyselection--container" >
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6" style="float:right;">
        <div class="form-group">
          <%= select_tag :property_id, property_options_for_current(@current_property&.id), id: 'propertyselection--selector', class: "form-control form-control-sm" %>
          <%= submit_tag 'Select', id: 'propertyselection--submit-button', class: 'btn btn-sm btn-primary hidden' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <script>
    document.getElementById('propertyselection--selector').
      addEventListener('change', function(e){ $('#propertyselection--submit-button').removeClass('hidden') });
  </script>
<% end %>
