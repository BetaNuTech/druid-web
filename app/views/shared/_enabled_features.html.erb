<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <strong>Site Features: </strong>
      <% UserProfile.managed_features.each do |feature| %>
        <span class="btn btn-sm btn-<%= Flipflop.enabled?(feature) ? 'success' : 'default' %>">
          <%= feature %>
        </span>
      <% end %>
    </div>
  </div>
</div>
