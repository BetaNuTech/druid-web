<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render partial: "shared/html_head" %>
    <title><%= @page_title || 'Bluesky' %></title>
    <%= csrf_meta_tags %>
    <!-- Google Fonts - Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'designv2', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= 'no-sidebar' if devise_controller? %>"<%- if @webpack %> data-no-turbolink data-no-transition-cache<% end %>>
    <div id="app_layout" class="">
      <div id="headerrow" class="header">
        <div class="header__appname">
          <span id="nav-hamburger" class="header__hamburger header__hamburger--mobile">
              <svg viewBox="0 0 100 80" width="20" height="20">
                <rect width="100" height="15" style="fill:rgb(201,208,216)"></rect>
                <rect y="30" width="100" height="15" style="fill:rgb(201,208,216)"></rect>
                <rect y="60" width="100" height="15" style="fill:rgb(201,208,216)"></rect>
              </svg>
          </span>
          <span class="header__brand-primary">BLUESKY</span>
          <span class="header__brand-secondary">LEAD MANAGEMENT</span>
        </div>
      </div>
      <div id="content" class="content">
        <%= render partial: 'shared/navbar_v2' %>
        <div id="viewcontent">
          <%= render partial: 'shared/property_selection' %>
          <%= render partial: 'shared/notifications' %>
          <%= yield %>
        </div>
      </div>
    </div>
    <div id="footer">
      <%= render partial: 'shared/enabled_features' if policy(User).manage_features? %>
      <%= render partial: 'shared/footer' %>
    </div>
    <% if defined?(@webpack) %>
      <% Array(@webpack).each do |pack| %>
        <%= javascript_pack_tag pack %>
        <%= stylesheet_pack_tag pack %>
      <% end %>
    <% end %>
    <%= render partial: 'shared/browser_check' %>
    <%= render partial: 'shared/tracking' unless Rails.env.test? %>
  </body>
</html>