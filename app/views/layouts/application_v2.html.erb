<!DOCTYPE html>
<html lang="en">
    <head>
        <%= render partial: "shared/html_head" %>

        <title><%= @page_title || 'Bluesky' %></title>

        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag 'designv2', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'applicationv2', 'data-turbolinks-track': 'reload' %>
    </head>
    <body id="SiteNavigation">
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <%= render partial: 'shared/side_navbar_v2' %>

            <!-- Page content wrapper-->
            <div id="page-content-wrapper">

                <!-- Top navigation-->
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <div class="container-fluid">

                        <a type="button" id="sidebarToggle"><i class="fas fa-bars" style="color:#ffffff; font-size:22px; border: 1px solid #ffffff; padding: 5px 10px; border-radius: 3px;"></i></a>

                        <div id="header-property">
                          <% if @current_property %>
                            <% if @current_property.logo.attached? %>
                              <%= link_to image_tag(@current_property.logo.variant(resize: 'x30')), property_path(@current_property) %>
                            <% else %>
                              <% unless policy(Property).select_current? %>
                                <h2><%= @current_property.name %></h2>
                              <% end %>
                            <% end %>
                          <% else %>
                              <h2>All Properties</h2>
                          <% end %>

                          <%= render partial: 'shared/property_selection_v2' %>
                        </div>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            
                    </div>
                </nav>
                
                <!-- PAGE CONTENT STARTS HERE -->
                <div class="full-width" id="alert-bar"></div>

                <div class="container-fluid">
    
                  <%= yield %>
          
                </div><!-- /container -->

                

                <div id="customer-support-form-div">

                    <hr />

                    <!--
                    <div id="customer-support-link"><a href="#!">How can we make this page better for you?</a></div>
                    -->
          
                    <div id="customer-support-form">
                      <button type="button" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                      
                      <form id="form-howCanWeMakeThisPageBetter">
                        <center>
                          <h2>We Value Your Feedback</h2>
          
                          <p>Your message will be routed to the appropriate person on our team. Thank you for helping us to serve you better!</p>

                            <div id="customer-support-form-container">
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <select id="category" name="" class="form-select">
                                        <option value="default">Select one</option>
                                        <option value="system-down">Critical: System Down</option>
                                        <optgroup label="Issue with...">
                                            <option value="account">Account</option>
                                            <option value="emails">Emails</option>
                                            <option value="marketing">Marketing</option>
                                            <option value="messages">Messages</option>
                                            <option value="phone-numbers">Phone Numbers</option>
                                            <option value="property-setup">Property Setup</option>
                                            <option value="templates">Templates</option>
                                        </optgroup>
                                        <optgroup label="Leads">
                                            <option value="duplicate-leads">Duplicate leads</option>
                                            <option value="not-receiving-leads">Not receiving leads</option>
                                            <option value="remove-old-leads">Remove old leads</option>
                                        </optgroup>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" rows="4" id="message" placeholder="Enter your message here."></textarea>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </div>
                        </center>
                      </form>
          
                    </div>

                </div><!-- /customer-support-link-div -->

            </div><!-- /page-content-wrapper -->

        </div><!-- /wrapper -->

        <div class="footer">
            <%= render partial: 'shared/enabled_features' if policy(User).manage_features? %>
            <p id="footer-content">

                <!--this area is populated by script-->

            </p>
        </div>

        <% if defined?(@webpack) %>
          <% Array(@webpack).each do |pack| %>
            <%= javascript_pack_tag pack %>
            <%= stylesheet_pack_tag pack %>
          <% end %>
        <% end %>
        <%= render partial: 'shared/browser_check' %>
        <%= render partial: 'shared/tracking' unless Rails.env.test? %>
    </body>
</html>
