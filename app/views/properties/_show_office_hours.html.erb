<div class="row">
  <div class="col-md-12">
    <h2>Office Hours</h2>
    <p>
      <strong>Timezone:</strong> <%= property.timezone %>
    </p>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Morning</th>
          <th>Afternoon</th>
        </tr>
      </thead>
      <tbody>
        <% working_hours = OpenStruct.new(property.working_hours || Property::DEFAULT_WORKING_HOURS) %>
        <% %w[monday tuesday wednesday thursday friday saturday sunday].each do |day| %>
        <tr>
          <td><%= day.capitalize %></td>
          <td>
            <%= working_hours[day]["morning"]["open"] %> &rarr;
            <%= working_hours[day]["morning"]["close"] %>
          </td>
          <td>
            <%= working_hours[day]["afternoon"]["open"] %> &rarr;
            <%= working_hours[day]["afternoon"]["close"] %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
