<div class="row">
  <div class="col-md-12">
    <h2>Employees</h2>
    <%= link_to('Monthly Activity Stats', user_stats_property_path(id: @property.id)) %>
    <%if @property.users.active.empty? %>
      <p>None</p>
    <% end %>
    <ul>
      <% @property.users.active.each do |user| %>
        <li>
          <b> <%= user.name %> </b>(<%= user.property_role(@property).capitalize %>)
        </li>
      <% end %>
    </ul>
  </div>
</div>
