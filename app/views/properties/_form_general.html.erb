<fieldset class="fieldset">
  <legend class="fieldset__legend">General</legend>
  <div class="row">
    <div class="col-md-8">
      <div class="form__group">
        <%= form.label :name, class: 'form__label' %>
        <%= form.text_field :name, id: :property_name, class: "form__control"  %>
      </div>

      <div class="form__group">
        <%= form.label :logo, class: 'form__label' %>
        <% if property.logo.attached? %>
          <div style="padding: 10px 5px;">
            <%= image_tag(property.logo.variant(resize: "100x100"), alt: "#{@property.name} logo" )%>
            <div class="form__check form__check--inline">
              <%= form.check_box :remove_logo, class: 'form__check-input' %>
              <%= form.label :remove_logo, class: "form__check-label" %>
            </div>
          </div>
        <% end %>
        <%= form.file_field :logo, class: 'form__control' %>
      </div>

      <!-- Email Header Image -->
      <div class="form__group">
        <%= form.label :email_header_image, "Email Header Image", class: 'form__label' %>
        <% if property.email_header_image.attached? %>
          <div style="padding: 10px 5px;">
            <%= image_tag(property.email_header_image, style: "max-width: 310px;", alt: "Email header" )%>
          </div>
        <% end %>
        <%= form.file_field :email_header_image, class: 'form__control' %>
        <small class="form-text text-muted">Used in automated email headers. Recommended: at least 620px wide with 5:1 to 6:1 aspect ratio (e.g., 620px Ã— 115px). Upload a new image to replace. Images cannot be deleted to preserve sent email integrity.</small>
      </div>

      <!-- Email Footer Logo -->
      <div class="form__group">
        <%= form.label :email_footer_logo, "Email Footer Logo", class: 'form__label' %>
        <% if property.email_footer_logo.attached? %>
          <div style="padding: 10px 5px;">
            <%= image_tag(property.email_footer_logo.variant(resize: "150x150"), alt: "Email footer logo" )%>
          </div>
        <% end %>
        <%= form.file_field :email_footer_logo, class: 'form__control' %>
        <small class="form-text text-muted">Used in automated email footers. Upload a new image to replace. Images cannot be deleted to preserve sent email integrity.</small>
      </div>

      <!--
        <div class="form__group">
          <%= form.label :organization %>
          <%= form.text_field :organization, id: :property_organization, class: "form__control" %>
        </div>
      -->

      <div class="row">
        <div class="col-md-4 form__group">
          <%= form.label :units, class: 'form__label' %>
          <%= form.number_field :units, id: :property_units, class: "form__control" %>
        </div>
      </div>

      <div class="form__group">
        <%= form.label :notes, class: 'form__label' %>
        <%= form.text_area :notes, id: :property_notes, class: "form__control" %>
      </div>

      <div class="form__group">
        <%= form.label :team, class: 'form__label' %>
        <%= form.select :team_id, select_team(@property.team_id), {include_blank: true}, { id: :property_team_id, class: "form__control" } %>
      </div>

      <div class="form__group">
        <div class="form__check">
          <%= form.check_box :active, class: 'form__check-input' %>
          <%= form.label :active, "Property is Active?", class: 'form__check-label' %>
        </div>
      </div>
    </div>

  </div>
</fieldset>
