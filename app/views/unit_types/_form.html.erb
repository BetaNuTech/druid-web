<%= form_with(model: unit_type, local: true) do |form| %>
  <% if unit_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(unit_type.errors.count, "error") %> prohibited this unit_type from being saved:</h2>

      <ul>
        <% unit_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 form__group">
      <%= form.label :property, class: 'form__label' %>
      <%= form.select :property_id, select_property(unit_type.property_id), {include_blank: true}, {class: "form__control"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form__group">
      <%= form.label :name, class: 'form__label' %>
      <%= form.text_field :name, id: :unit_type_name, class: "form__control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 form__group">
      <%= form.label :description, class: 'form__label' %>
      <%= form.text_area :description, id: :unit_type_description, class: "form__control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 form__group">
      <%= form.label :sqft, "Square Feet", class: 'form__label' %>
      <%= form.number_field :sqft, class: "form__control" %>
    </div>
    <div class="col-md-2 form__group">
      <%= form.label :bedrooms, class: 'form__label' %>
      <%= form.number_field :bedrooms, class: "form__control" %>
    </div>
    <div class="col-md-2 form__group">
      <%= form.label :bathrooms, class: 'form__label' %>
      <%= form.number_field :bathrooms, class: "form__control" %>
    </div>
    <div class="col-md-2 form__group">
      <%= form.label :market_rent, class: 'form__label' %>
      <%= form.number_field :market_rent, class: "form__control" %>
    </div>
  </div>

  <div class="form__group">
    <button type="submit" class="btn btn--primary">Save</button>
  </div>
<% end %>
