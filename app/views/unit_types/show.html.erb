<section class="section">
<div class="row">
  <div class="col-md-6">
    <h1>Unit Type: <%= @unit_type.name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Property:</strong>
          <% if @unit_type.property.present? %>
            <%= link_to(@unit_type.property_name, property_path(@unit_type.property)) %>
          <% else %>
            'None'
          <% end %>
        </p>
       </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Name:</strong>
          <%= @unit_type.name %>
        </p>
        <p>
          <strong>Remote ID:</strong>
          <%= @unit_type.remoteid || 'None' %>
        </p>
       </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Description:</strong>
          <%= @unit_type.description %>
        </p>
       </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <strong>Square Feet:</strong>
        <%= @unit_type.sqft %>
      </div>
      <div class="col-md-2">
        <strong>Bedrooms:</strong>
        <%= @unit_type.bedrooms %>
      </div>
      <div class="col-md-2">
        <strong>Bathrooms:</strong>
        <%= @unit_type.bathrooms %>
      </div>
      <div class="col-md-2">
        <strong>Market Rent:</strong>
        <%= @unit_type.market_rent %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= link_to 'Edit', edit_unit_type_path(@unit_type) %> |
        <%= link_to 'Back', :back %>
      </div>
    </div>

  </div>
</div>
</section>