<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-6">
          <h1>Lead Action</h1>
          <h4>Lead Action and other Lead Actions</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p>
            <strong>Name:</strong>
            <%= @lead_action.name %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p>
            <strong>Glyph:</strong>
            <span style="font-size: 1.5em;">
              <%= glyph(@lead_action.glyph) %>
            </span>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p>
            <strong>Description:</strong>
            <%= @lead_action.description %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p>
            <strong>Active:</strong>
            <%= @lead_action.active %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <%= link_to 'Edit', edit_lead_action_path(@lead_action) %> |
          <%= link_to 'Back', lead_actions_path %>
        </div>
      </div>

    </div>
  </div>
</div>


