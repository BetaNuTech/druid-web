<section class="section">
<div class="row">
  <div class="col-md-6">
    <h1>Lead Actions</h1>
  </div>
  <% if policy(LeadAction).new? %>
    <div class="col-md-6 text-right">
      <%= link_to 'Create New Lead Action', new_lead_action_path, class: "btn btn--xs btn--primary" %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table" data-clickable-rows="true">
      <thead>
        <tr>
          <th>Name</th>
          <th>Glyph</th>
          <th>Description</th>
          <th>Active?</th>
          <th>Is Contact?</th>
          <th>Notify Leads?</th>
          <th>State Affinity</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @lead_actions.each do |lead_action| %>
          <tr>
            <td class="first-column"><%= lead_action.name %></td>
            <td style="font-size: 1.5em;"><%= glyph(lead_action.glyph) %></td>
            <td><%= lead_action.description %></td>
            <td><%= lead_action.active ? "Yes" : "No" %></td>
            <td><%= lead_action.is_contact ? "Yes" : "No" %></td>
            <td><%= lead_action.notify? ? "Yes" : "No" %></td>
            <td><%= lead_action.state_affinity&.capitalize %></td>
            <td class="actions text-nowrap">
              <%= model_link_with_tooltip(lead_action, :show) %>
              <%= model_link_with_tooltip(lead_action, :edit) %>
              <%= model_link_with_tooltip(lead_action, :destroy) %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <% if policy(LeadAction).new? %>
    <div class="col-md-12 text-right">
      <%= link_to 'Create New Lead Action', new_lead_action_path, class: "btn btn--xs btn--primary" %>
    </div>
  <% end %>
</div>
</section>