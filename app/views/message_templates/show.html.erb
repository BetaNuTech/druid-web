<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <h1>Message Template: <%= @message_template.name %></h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Message Type:</strong>
          <%= @message_template.message_type.name %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Visibility:</strong>
          <%= @message_template.shared? ? 'Shared' : 'Private' %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Name:</strong>
          <%= @message_template.name %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Subject:</strong>
          <%= @message_template.subject %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Body:</strong><br/>
          <iframe id="message_template_preview" onload="resizeIframe(this)" srcdoc="<%= @message_template.body_preview %>">
          </iframe>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= link_to 'Edit', edit_message_template_path(@message_template), class: "btn btn--small btn--primary" %>
        <%= link_to 'Back', message_templates_path, class: "btn btn--small btn--info" %>
      </div>
    </div>

  </div>
</div>
