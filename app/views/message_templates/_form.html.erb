<%= form_with(model: message_template, local: true) do |form| %>
  <% if message_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message_template.errors.count, "error") %> prohibited this message_template from being saved:</h2>

      <ul>
        <% message_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="row">
      <div class="col-md-3 form__group">
        <%= form.label :message_type_id, class: 'form__label' %>
        <%= form.select :message_type_id, select_message_type(message_template.message_type_id), {}, {id: :message_template_message_type, class: 'form__control'} %>
      </div>
      <div class="col-md-3 form__group">
        <%= form.label :user_id, 'Owner', class: 'form__label' %>
        <% if policy(message_template).change_user? %>
          <%= form.select :user_id, select_message_template_user(message_template), {include_blank: true}, { class: 'form__control' } %>
        <% else %>
          <p class="form-control-static"><%= message_template.user&.name || 'System' %></p>
        <% end %>
      </div>
      <div class="col-md-3 form__group">
        <label class="form__label">&nbsp;</label>
        <div class="form__check">
          <%= form.check_box :shared, class: 'form__check-input' %>
          <%= form.label :shared, 'Shared?', class: 'form__check-label' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form__group">
        <%= form.label :name, class: 'form__label' %>
        <%= form.text_field :name, id: :message_template_name, class: 'form__control' %>
      </div>
    </div>
    <div class="row" id="message_template_subject_input">
      <div class="col-md-6 form__group">
        <%= form.label :subject, class: 'form__label' %>
        <%= form.text_field :subject, id: :message_template_subject, class: 'form__control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 form__group">
        <%= form.label :body, class: 'form__label' %>
        <%#= link_to("Toggle Rich Editor", "#", {id: "html_editor_toggle", class: "btn btn--xs btn-info"}) %>
        <%= form.text_area :body, { rows: 5, id: (message_template.rich_editor? ? 'html_editor_v2' : 'plain_editor'), class: 'form__control' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form__group">
          <button type="submit" class="btn btn--primary">Save</button>
          <%= link_to('Back', :back, class: "btn btn--small btn--info")  %>
        </div>
      </div>
      <div class="col-md-2">
        <%= link_to('Delete', message_template, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--small btn--danger") if policy(message_template).destroy? %>
      </div>
    </div>


    <%= render partial: "template_help" %>
  <% end %>

<%= render partial: 'shared/editor_init' %>
