      <dd>the lead agent's name</dd>
      <dt>{{agent_title}}</dt>
      <dd>The Lead agent's title</dd>
      <dt>{{agent_first_name}}</dt>
      <dd>The Lead agent's first name</dd>
      <dt>{{agent_last_name}}</dt>
      <dd>The Lead agent's last name</dd>
      <dt>{{property_name}}</dt>
      <dd>Property name</dd>
      <dt>{{property_city}}</dt>
      <dd>Property city name</dd>
      <dt>{{property_address}}</dt>
      <dd>Property Address</dt>
      <dt>{{property_address_html}}</dt>
      <dd>Property Address (with HTML line breaks)</dt>
      <dt>{{property_amenities}}</dt>
      <dd>Property amenities</dd>
