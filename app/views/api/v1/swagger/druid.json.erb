              "$ref": "#/definitions/Lead"
            },
            "examples": {
              "application/json": {
                "$ref": "#/responses/LeadResponse"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "lead"
        ],
        "summary": "Get Leads created by this source",
        "description": "GET leads.json with a ?token= parameter for authentication and an optional ?limit= parameter to limit results to the last XXX Leads created by this source",
        "operationId": "getLeads",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "description": "Authentication Token provided by Bluestone",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Number of records to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Server Error"
          },
          "200": {
            "description": "OK",
