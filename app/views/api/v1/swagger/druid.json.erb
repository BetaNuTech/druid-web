        ],
        "summary": "Post a Lead to Druid",
        "description": "POST a JSON document containing Lead data. Include a ?token= param in the URL for authentication.",
        "operationId": "addLead",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Lead Data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Lead"
            }
          },
          {
            "in": "query",
            "name": "token",
            "description": "Authentication Token provided by Bluestone",
            "required": true,
            "type": "string"
          }
        ],
