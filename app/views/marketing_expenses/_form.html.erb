<%= form_with(model: marketing_expense, url: url_for([ marketing_expense.marketing_source, marketing_expense ]), local: true) do |form| %>
  <% if marketing_expense.errors.any? %>
    <div class="alert alert--danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Errors prohibited this marketing expense from being saved.</h4>
      <ul>
        <% marketing_expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h4>for <%= marketing_expense.property.name %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-sm-3 form-group">
      <%= form.label :fee_type, class: 'form-label' %>
      <%= form.select :fee_type, marketing_source_fee_type_options(marketing_expense.fee_type),
        {include_blank: false}, {class: 'form-control' } %>
    </div>
    <div class="col-xs-4 col-sm-3">
      <%= form.label :fee_total, 'Total' %>
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= form.text_field :fee_total, class: 'form-control' %>
      </div>
    </div>
    <div class="col-xs-4 col-sm-3">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, min: 0, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= form.label :invoice %>
      <%= form.text_field :invoice, class: 'form-control' %>
    </div>
    <div class="col-sm-8">
      <%= form.label :description %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-3 form-group">
      <%= form.label :start_date, class: 'form-label' %>
      <%= form.date_field :start_date, class: 'form-control' %>
    </div>
    <div class="col-xs-6 col-sm-3 form-group">
      <%= form.label :end_date, class: 'form-label' %>
      <%= form.date_field :end_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn--primary">Save</button>
    <%= link_to 'Back', :back, class: "btn btn--small btn--default" %>
  </div>

<% end %>
