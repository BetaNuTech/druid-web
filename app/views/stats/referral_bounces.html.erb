<div class="row">
  <div class="col-md-12">
    <h2>Ad Redirects</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped" id="ReferralBounces">
      <thead>
        <tr>
          <th>Campaign</th>
          <th>Property</th>
          <th>Month</th>
          <th class="filterCount">Redirects</th>
        </tr>
      </thead>
      <tbody>
        <tr class="filter-row">
          <td colspan="4">
            <div class="form-group row">
              <div class="col-md-6 col-md-offset-3">
<input type="text" id="filter-input" class="form-control" placeholder="Search Table: type search terms separated by spaces" style="text-align: center;">
              </div>
            </div>
          </td>
        </tr>
        <tr class="filter-sum">
          <td colspan=2>
            <button type="button" class="btn btn-sm btn-primary" data-table-id="ReferralBounces">Download</button>
          </td>
          <td>Total:</td>
          <td class="filter-sum"></td>
        </tr>
        <% @service.stats_array.each do |stats| %>
          <tr class="filter-data">
            <% stats.each do |value| %>
              <td><%= value %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
  filterTableRows('ReferralBounces', [1,2,3]);
  sumFilteredTable('ReferralBounces');
  saveFilteredTable('ReferralBounces');
</script>
