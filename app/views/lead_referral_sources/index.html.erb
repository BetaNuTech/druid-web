<div class="section">
<div class="row">
  <div class="col-md-6">
    <h1>Lead Referral Sources</h1>
  </div>
  <% if policy(LeadReferralSource).new? %>
    <div class="col-md-6 text-right">
      <%= link_to('Create a Lead Referral Source', new_lead_referral_source_path, class: "btn btn--xs btn--primary" ) %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @lead_referral_sources.empty? %>
      <p class="lead">None</p>
    <% else %>
      <div class="table-responsive">
        <table class="table" data-clickable-rows="true">
          <thead>
            <tr>
              <th>Name</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>
        <tbody>
          <% @lead_referral_sources.each do |lead_referral_source| %>
            <tr>
              <td><%= lead_referral_source.name %></td>
              <td class="actions">
                <%= model_link_with_tooltip(lead_referral_source, :show) %>
                <%= model_link_with_tooltip(lead_referral_source, :edit) %>
                <%= model_link_with_tooltip(lead_referral_source, :destroy) %>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
</section>