<div class="row">
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-6">
        <h1>Note</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
      <p>
        <strong>Subject</strong><br/>
        <% if @note.notable.present? %>
          <%= link_to url_for(@note.notable) do %>
            <%= @note.notable.try(:name) %> (<%= @note.notable_type %>)
          <% end %>
        <% else %>
          None
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Action:</strong>
          <%= @note.lead_action.try(:name) || 'None' %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Reason:</strong>
          <%= @note.reason.try(:name) || 'None' %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Schedule:</strong>
          <%= @note.schedule || 'None' %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Content:</strong>
          <%= @note.content || 'None' %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= link_to 'Edit', edit_note_path(@note) %> |
        <%= link_to 'Back', notes_path %>
      </div>
    </div>

  </div>
</div>
