  <div class="comments">

    <div class="row">
      <div class="col-md-2">
        <h2>Comments</h2>
      </div>
      <div class="col-md-2">
        <a href="#" id="lead_toggle_comments_form_link"><span class="btn btn-xs btn-primary">Add</span></a>
      </div>
    </div>

    <div class="row" id="lead_comments_form" style="display: none;">
      <div class="col-md-12">
        <%= render partial: "notes/lead_form", locals: {note: lead.comments.build} %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div id="comments">
          <% if comments.empty? %>
            <p class="lead" id="comments_empty_statement">
              None
            </p>
          <% else %>
            <div id="latest_comments">
              <%= render partial: "notes/note", collection: comments.order(created_at: 'desc')[0..4]  %>
            </div>
            <% if comments.count > 5 %>
              <%= link_to("Show More Comments", "#", id: "lead_show_more_comments_link", class: "btn btn-xs btn-default") %>
            <% end %>
            <div id="more_comments" style="display: none;">
              <%= render partial: "notes/note", collection: comments.order(created_at: 'desc')[5..]  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>



  </div>
