<div class="row">
  <div class="col-md-6">
    <h1>Leads</h1>
  </div>
  <% if policy(Lead).new? && false%>
    <div class="col-md-6 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Lead', new_lead_path %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-10">
    <table id="leads-table" class="table lead-listing">
      <thead>
      </thead>

      <tbody>
        <%#= render partial: "lead", collection: @leads %>
        <% @leads.each do |lead| %>
          <tr>
            <td>
              <%= render partial: "lead_card", locals: {lead: lead} %>
            </td>
            <td class="nowrap actions">
              <%= link_to lead, class: "btn btn--icon btn--xs btn--ghost", title: "View" do %><%= glyph(:show) %><% end %>
              <%= link_to edit_lead_path(lead), class: "btn btn--icon btn--xs btn--primary", title: "Edit" do %><%= glyph(:pencil) %><% end %>
              <%= link_to lead, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--icon btn--xs btn--danger", title: "Delete" do %><%= glyph(:delete) %><% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'pagination', locals: {search: @search} %>
  </div>
</div>

<% if policy(Lead).new? && false%>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= glyph(:create) %>
      <%= link_to 'Create New Lead', new_lead_path %>
    </div>
  </div>
<% end %>
