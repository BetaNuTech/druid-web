<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Leads</h1>
    </div>
    <% if policy(Lead).new? && false%>
      <div class="col-md-6 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead', new_lead_path %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-10">
      <table id="leads-table" class="table lead_listing">
        <thead>
        </thead>

        <tbody>
          <%#= render partial: "lead", collection: @leads %>
          <% @leads.each do |lead| %>
            <tr>
              <td>
                <%= render partial: "lead_card", locals: {lead: lead} %>
              </td>
              <td class="nowrap">
                <%= link_to lead do %><%= glyph(:show) %><% end %>&nbsp;
                <%= link_to edit_lead_path(lead) do %><%= glyph(:edit) %><% end %>&nbsp;
                <%= link_to lead, method: :delete, data: { confirm: 'Are you sure?' } do %><%= glyph(:delete) %><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'pagination', locals: {search: @search} %>
    </div>
  </div>

  <% if policy(Lead).new? && false%>
    <div class="row">
      <div class="col-md-12 text-right">
        <%= glyph(:create) %>
        <%= link_to 'Create New Lead', new_lead_path %>
      </div>
    </div>
  <% end %>
</div>
