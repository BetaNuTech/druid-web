<blockquote>
  <% if lead.email.present? %>
    <%= glyph(:envelope) %> <%= lead.email %><br/>
  <% end %>
  <% if lead.phone1.present? %>
    <%= glyph(:earphone) %> <%= number_to_phone(lead.phone1, area_code: true) %>
  <% end %>
  <% if lead.phone2.present? %>
    <br/>
    <%= glyph(:earphone) %> <%= number_to_phone(lead.phone2, area_code: true) %>
  <% end %>
</blockquote>
