<tr>
  <td><%= long_datetime(DateTime.parse(call_entry["date"]).localtime) rescue '' %></td>
  <td>
    <%= call_entry["src"] %>
    <% if call_entry["cnam"].present? %>
      (<%= call_entry["cnam"] %>)
    <% end %>
  </td>
  <td><%= call_entry["dst"] %></td>
  <td>
    <% if call_entry["recording_path"].present? %>
      <audio preload="metadata">
        <source src="<%= call_entry["recording_path"] %>" type="<%= call_entry["recording_type"]%>" />
        <%= link_to("Download", call_entry["recording_path"]) %>
      </audio>
    <% else %>
      None
    <% end %>
  </td>
</tr>
