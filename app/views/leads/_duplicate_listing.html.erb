<% if lead.duplicates.present? %>
  <div class="duplicates-section">
    <div class="section-header">
      <h2><%= glyph(:duplicate) %> Possible Duplicates</h2>
      <span class="duplicate-count"><%= lead.duplicate_records.count %> potential matches</span>
    </div>
    <div class="duplicates-container">
      <%= render partial: "duplicates_v2", locals: {duplicates: lead.duplicate_records} %>
    </div>
  </div>
<% end %>
